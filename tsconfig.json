{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019", //如果设定esnext会产生报错。因为webpack无法理解原生的optional chain语法
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node", //可以自动使用文件夹下的 index.ts
    // "strictNullChecks": true,
    // "noImplicitAny": false,
    // "noImplicitThis": true, //this 在object literial中也会有上下文的智能判定
    "strict": true,
    "baseUrl": "./src" //typescript 根路径（绝对路径的根节点）
  },
  "include": ["src", "node_modules/@types"]
  // "exclude": ["node_modules"]
}
